{
  "_comment": "DEPRECATED: This file is for documentation only. Claude Code reads hooks from ~/.claude/settings.json or .claude/settings.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/run-hook.cmd session-start.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/run-hook.cmd weekly-learning.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/prompt-detector.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/run-hook.cmd session-end.sh"
          }
        ]
      }
    ]
  }
}
